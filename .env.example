# Provider selection: openai | azure
LLM_PROVIDER=openai

# Shared LLM transport controls
LLM_TIMEOUT_SECONDS=300
LLM_MAX_RETRIES=2

# OpenAI (public API)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-mini
# Optional custom endpoint (leave blank for api.openai.com)
OPENAI_BASE_URL=

# Azure OpenAI (used when LLM_PROVIDER=azure)
AZURE_OPENAI_ENDPOINT=
AZURE_OPENAI_API_VERSION=2024-06-01
AZURE_OPENAI_DEPLOYMENT=
# API key auth (set this OR enable AAD)
AZURE_OPENAI_API_KEY=
# AAD auth (Managed Identity/Entra). Requires azure-identity package.
AZURE_OPENAI_USE_AAD=false
# Optional: user-assigned managed identity client ID.
AZURE_OPENAI_MANAGED_IDENTITY_CLIENT_ID=
AZURE_OPENAI_TOKEN_SCOPE=https://cognitiveservices.azure.com/.default

# Data and cache
DATA_CSV_PATH=data/data.csv
SECTION_MAPPING_PATH=data/survey questrion-section mapping.xlsx
CACHE_PATH=.cache/summaries.sqlite

# Prompt controls
PROMPT_EXCERPT_CHARS=280
LOW_SAMPLE_THRESHOLD=8
HIGH_MISSINGNESS_THRESHOLD=0.35

# Optional cost assumptions (USD per 1k tokens)
INPUT_COST_PER_1K_TOKENS=0.0008
OUTPUT_COST_PER_1K_TOKENS=0.0032
